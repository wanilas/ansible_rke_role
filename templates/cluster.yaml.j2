#{{ ansible_managed }}

nodes:
  {% for host in groups['rpi'] %}
  - address: "{{ hostvars[host]['ansible_host'] }}"
    user: ubuntu
    role:
    {% for role in hostvars[host]['roles'] %}
      {% if 'controlplane' in role %}
      - controlplane
      {% endif %}
      {% if 'worker' in role %}
      - worker
      {% endif %}
      {% if 'etcd' in role %}
      - etcd
      {% endif %}
    {%- endfor %}
{% endfor %}

services:
  etcd:
    snapshot: true
    creation: 6h
    retention: 24h

network:
  plugin: flannel